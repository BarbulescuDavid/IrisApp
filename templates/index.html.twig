{%  extends "base.html.twig" %}

{% block body %}
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md" data-controller="format">
        <h1 class="text-2xl font-bold mb-6">Form with Integer and String Input</h1>
        <form>
            <label for="integerInput" class="block text-sm font-medium text-gray-700">Integer Input:</label>
            <input type="text" class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" id="integerInput" {{ stimulus_target('format','integerInput') }}>

            <br><br>

            <label for="stringInput" class="block text-sm font-medium text-gray-700">String Input:</label>
            <input type="text" id="stringInput" class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" {{ stimulus_target('format','stringInput') }}>
        </form>
    </div>

{% endblock %}